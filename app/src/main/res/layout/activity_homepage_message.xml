<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage_message">


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/btn_color"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="33dp"
        tools:ignore="HardcodedText,MissingConstraints,SpUsage" />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchview"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/searchview_background"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toBottomOf="@+id/message"
        app:queryBackground="@android:color/transparent"
        app:queryHint="Search Here"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="22dp" />


    <ImageButton
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/black"
        android:importantForAccessibility="no"
        android:src="@drawable/baseline_group_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="55dp"
        app:layout_constraintTop_toBottomOf="@+id/message"
        tools:ignore="ImageContrastCheck" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/black">

        <ImageButton

            android:id="@+id/imagecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/black"
            android:contentDescription="TODO"
            android:src="@drawable/call_icon"
            tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText" />
        <ImageButton
            android:id="@+id/imagemessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_icon"
            android:layout_marginStart="130dp"
            android:backgroundTint="@color/black"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageButton
            android:id="@+id/imageadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:backgroundTint="@color/black"
            android:contentDescription="@string/add_new_group"
            android:src="@drawable/baseline_group_24"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/imagesetting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="330dp"
            android:backgroundTint="@color/black"
            android:contentDescription="Add new group"
            android:src="@drawable/settings_yellow"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
